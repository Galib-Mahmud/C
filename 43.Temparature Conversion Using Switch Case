#include<stdio.h>
int main()
{
int choice;
float temp,convertedTemp;

   printf("Temparature conversion menu");
   printf("1.Fahrenheit to Celsios\n");
   printf("2.Celsios to Fahrenheit\n");
   printf("Enter your choice ");
   scanf("%d",&choice);
   switch(choice)
   {
   case 1:
       {


    printf("Enter the fahrenheit tempature: ");
    scanf("%f",&temp);
    convertedTemp= (temp-32)/1.8;
    printf("The Celsios temperature %f\n",convertedTemp);

    break;
       }

   case 2:
       {
    printf("Enter the Celsios tempature: ");
    scanf("%f",&temp);
    convertedTemp= (1.8*temp)+32;
    printf("The Fahrenheit temperature %f\n",convertedTemp);

}
   default:
    printf("Not a correct option: ");
return 0;

}}
