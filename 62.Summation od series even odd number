

#include<stdio.h>
int main()
{
int i,sum=0, n;
printf("Enter the value of n =   ");
scanf("%d",&n);

for(i=1;i<=n;i=i+2)
{
   sum=sum+i;
}
printf("The summation is: %d",sum);

getch();
}



#include<stdio.h>
int main()
{
int i,sum=0, n;
printf("Enter the value of n =   ");
scanf("%d",&n);

for(i=2;i<=n;i=i+2)
{
   sum=sum+i;
}
printf("The summation is: %d",sum);

getch();
}



#include<stdio.h>
int main()//1.5+2.5+3.5+4.5+........n
{
float i,sum=0, n;
printf("Enter the value of n =   ");
scanf("%f",&n);

for(i=1.5;i<=n;i++)
{
   sum=sum+i;
}
printf("The summation is: %f",sum);

getch();
}


